		out.write("&nbsp produit:"+produit.getNomProduit()+"");
		out.write("&nbsp id lcmd:"+lCmd.getIdLigneCommande()+"");
		out.write("<br>&nbsp id Commande:"+lCmd.getIdCommade()+"");
